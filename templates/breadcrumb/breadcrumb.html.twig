{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup themeable
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb" class="ui breadcrumb">
    <h2 class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>

    {% for item in breadcrumb %}
      {% if item.url %}
        <a href="{{ item.url }}" class="section">{{ item.text }}</a>
      {% else %}
        {{ item.text }}
      {% endif %}

      {% if not loop.last %}
        <i class="right angle icon divider"></i>
      {% endif %}
    {% endfor %}
  </nav>
{% endif %}
